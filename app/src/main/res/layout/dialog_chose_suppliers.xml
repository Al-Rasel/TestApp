<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
 >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c1124d"
        android:gravity="center"
        android:text="サプライヤーを選んでください"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="#fff"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        >

        <Button
            android:id="@+id/bttonFirstSuppliers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:backgroundTint="#e84ebf4a"
            android:text="東京電力株式会社"
            android:textColor="#fff"
            android:textSize="14sp" />


        <Button
            android:id="@+id/buttonsSecondSuppliers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#e81179bf"
            android:layout_marginRight="4dp"
            android:text="東京ガス"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>




</LinearLayout>
